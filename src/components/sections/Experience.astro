    flex-wrap: wrap;
    max-width: 520px;
  }

  summary {
    cursor: pointer;
    user-select: none;
    display: block;
    padding-left: 1rem;
    position: relative;
  }

  summary:before {
    content: "";
    border-width: 0.38rem;
    border-style: solid;
    border-color: transparent transparent transparent #4b4b4b;
    position: absolute;
    top: 0.7rem;
    left: -0.1rem;
    transform-origin: 0.2rem 50%;
    transition: 0.25s transform ease;
  }

  details[open] > summary:before {
